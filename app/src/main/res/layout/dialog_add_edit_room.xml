<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Название комнаты -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название комнаты:"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/room_name_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Введите название комнаты"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Датчики -->
        <CheckBox
            android:id="@+id/has_sensors_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Установлены датчики температуры и влажности"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Розетки -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите розетки для этой комнаты:"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/sockets_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>